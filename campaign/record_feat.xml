<?xml version="1.0" encoding="UTF-8"?>
<root>
	<!-- <windowclass name="reference_feat" merge="join"> Commented out by Farratto -->
	<windowclass name="reference_feat" merge="join" copy="record_window_tabbed"> <!-- added by Farratto -->
		<script file="campaign/scripts/insetcontentframe.lua" />
		<sizelimits>
			<minimum width="350" />
		</sizelimits>
		<!-- Tab section added by Farratto -->
		<tab>
			<name>notes</name>
			<resource>tab_main</resource>
			<class>record_content_text</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>actions</name>
			<script>
				function onInit()
					if window.main and not window.text then
						tab[1].subwindow[1] = "main";
					end
					if super and super.onInit then
						super.onInit();
					end
				end
			</script>
			<script file="campaign/scripts/advancedeffectstab.lua" />
			<icon>tab_actions</icon>
			<subwindow>actions</subwindow>
			<resource>tab_actions</resource>
			<embed />
		</tab>
		<sheetdata>
			<frame_record_content name="contentframe" merge="delete" />
			<subwindow_power_action_record name="actions" />

			<scrollbar_record>
				<target>actions</target>
			</scrollbar_record>

            <!-- section commented out by Farratto
			<tabs_recordsheet name="tabs">
