<?xml version="1.0" encoding="UTF-8"?>
<root>
	<windowclass name="npc" merge="join" copy="record_window_tabbed">
		<sizelimits>
			<minimum width="500" height="500" />
		</sizelimits>
		<minimize>minimized_npc</minimize>
		<gmexport>npc</gmexport>
		<!--*****************************************************************************-->
		<!--Amended by D.Eiszele 23/06/24-->
		<tab>
			<name>main</name>
			<resource>tab_main</resource>
			<class>npc_combat</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>tab_inventory</name>
			<resource>tab_inventory</resource>
			<class>npc_inventory</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>notes</name>
			<resource>tab_notes</resource>
			<class>record_content_text</class>
			<embed />
		</tab>
		<script>
			function onIDChanged()
				super.onIDChanged();
				if not Session.IsHost then
					local bID = LibraryData.getIDState("npc", getDatabaseNode(), true);
					tabs.setVisible(bID);
				end
			end
		</script>
	</windowclass>
	<windowclass name="npc_inventory">
		<margins>0,3,0,0</margins>
		<script file="campaign/scripts/npc_inventory.lua" />
		<sheetdata>
			<genericcontrol name="inventory_iedit">
				<script>
					function getValue()
						return false;
					end
				</script>
				<anchored width="0" height="0" position="insidetopleft" />
			</genericcontrol>

			<subwindow name="contents">
				<anchored>
					<top offset="0" />
					<left offset="0" />
					<right offset="-15" />
				</anchored>
				<class>charsheet_inventory_contents</class>
				<activate />
				<fastinit />
			</subwindow>

			<label_charframetop name="powerstitle">
				<anchored height="20">
					<top parent="contents" anchor="bottom" offset="10" />
					<left offset="15" />
					<right offset="-25" />
				</anchored>
				<static textres="char_label_powers" />
				<icons>char_powers</icons>
				<target>powers</target>
			</label_charframetop>

			<windowlist name="powers">
				<script>
					function onFilter(instance)
						local nodeInstance = instance.getDatabaseNode();
						return ItemPowerManager.shouldShowItemPowers(nodeInstance);
					end
				</script>
				<anchored>
					<top parent="powerstitle" anchor="bottom" offset="5" />
					<left parent="" />
					<right parent="" offset="-15" />
				</anchored>
				<datasource>.inventorylist</datasource>
				<class>npc_item_power_group</class>
				<sortby><field>name</field></sortby>
				<skipempty />
				<noscroll />
				<readonly />
				<footer>footer_wide</footer>
			</windowlist>
		</sheetdata>
	</windowclass>

	<windowclass name="npc_item_power_group">
		<margins control="0,0,0,5" />
		<sheetdata>
			<stringfield name="name">
				<anchored height="20">
					<top offset="10" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<frame name="headersimple" offset="10,3,10,3" />
				<font>sheetlabel</font>
				<nodrag />
				<readonly />
				<center />
			</stringfield>
			<windowlist name="powers">
				<anchored>
					<top parent="name" anchor="bottom" offset="5" />
					<left offset="10" />
					<right offset="-5" />
				</anchored>
				<datasource>.powers</datasource>
				<class>npc_item_power</class>
				<skipempty />
				<noscroll />
			</windowlist>
		</sheetdata>
	</windowclass>

	<windowclass name="npc_item_power">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/npc_item_power.lua" />
		<sheetdata>
			<linkcontrol name="shortcut">
				<anchored width="20" height="20">
					<top offset="2" />
					<right />
				</anchored>
				<class>power</class>
			</linkcontrol>
			<string_textlistitem name="value">
				<anchored>
					<left offset="5" />
					<top offset="2" />
					<right parent="shortcut" anchor="left" offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<lineoffset default="on">0</lineoffset>
				<nohighlight />
				<actortype>ct</actortype>
				<actorpath>......</actorpath>
				<script file="ct/scripts/ct_power.lua" />
			</string_textlistitem>
		</sheetdata>
	</windowclass>
</root>