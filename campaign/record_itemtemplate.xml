<?xml version="1.0" encoding="UTF-8"?>
<root>
	<windowclass name="itemtemplate" merge="join" copy="record_window_tabbed">
		<sizelimits>
			<minimum width="350" />
		</sizelimits>
		<!-- Tab section added by Farratto -->
		<tab>
			<name>notes</name>
			<resource>tab_main</resource>
			<class>record_content_text</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>actions</name>
			<icon>tab_actions</icon>
			<subwindow>actions</subwindow>
			<resource>tab_actions</resource>
			<embed />
		</tab>
		<sheetdata>
			<frame_record_content name="contentframe" merge="delete" />

			<subwindow_record name="actions">
				<class>item_actions</class>
			</subwindow_record>

			<scrollbar_record>
				<target>actions</target>
			</scrollbar_record>
		</sheetdata>
	</windowclass>
</root>